<p><%= @cocktail.name %></p>
<% @doses.each do |dose| %>
  <p><%= dose.description %> of <%= Ingredient.find(dose.ingredient_id).name %></p>
  <%= link_to "Delete the dose", cocktail_dose_path(@cocktail, dose),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
<% end %>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), :class=>"btn btn-success" %>
